@using AFJOB_WEB.Models
@{
    ViewData["Title"] = "Recruiter Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Dashboard" asp-controller="Recruiter">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="JobList" asp-controller="Recruiter">Manage Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Applications" asp-controller="Recruiter">Job Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Interviews" asp-controller="Recruiter">Interviews</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Recruiter Dashboard</h1>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-header">Total Jobs</div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.TotalJobs</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-header">Applications</div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.TotalApplications</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-warning mb-3">
                            <div class="card-header">Scheduled Interviews</div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.TotalInterviews</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>

